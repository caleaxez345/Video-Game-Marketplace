<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Express Video Games</title>
</head>

<body>
    <header>
        <a href="/">
            <img src="/images/Logo.jpeg" alt="logo">
        </a>
        <form action="/items" method="GET">
            <div class="search-bar">
                <input type="text" placeholder="Search..." name="query">
                <button type="submit"><i class="fa fa-search"></i></button>
            </div>
        </form>
        <div class="nav-bar">
            <ul>
                <%if(!user) {%>
                    <li><a href='/items'>Browse</a></li>
                    <li><a href='/items/new'>Sell</a></li>
                    <li><a href="/users/new/">Sign Up</a></li>
                    <li><a href="/users/login">Login</a></li>
                    <%} else {%>
                        <li><a href='/items'>Browse</a></li>
                        <li><a href='/items/new'>Sell</a></li>
                        <li><a href="/users/profile">My Account</a></li>
                        <li><a href="/users/logout">Log Out</a></li>
                    <%}%>
            </ul>
        </div>
    </header>

    <div id="errorMessage-container">
    <% if(errorMessages.length > 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='error'>
                <%=message%>
                <button class="close-btn" onclick="closeMessage('error')">X</button>
            </div>
            <%});%>
                <%}%>
    </div>
     <% if(successMessages.length > 0) {%>
         <% successMessages.forEach(message=>{%>
            <div class='success'>
                <%=message%>
                <button class="close-btn" onclick="closeMessage('success')">X</button>
            </div>
        <%});%>
    <%}%>

    <script>
        function closeMessage(type) {
            const messages = document.querySelectorAll(`.${type}`);
            messages.forEach(message => {
                message.style.display = 'none';
            });
        }
    </script>